# This is the version of JUnit that will be used at build time and run time
junit: org.apache.servicemix.bundles.junit;version="[4.11,5)"

# This is the version of Mockito that will be used at build time and run time
mockito: org.mockito.mockito-core;version="[1.9,2)",\
  org.objenesis;version="[2.1,3)"

# Discover and run all test cases annotated with the @RunWith annotation
Test-Cases: ${classes;CONCRETE;ANNOTATED;org.junit.runner.RunWith}

# Build dependencies 
-buildpath: \
	${junit},\
	${mockito},\
	osgi.annotation;version=6.0.1,\
	osgi.core;version=6.0,\
	osgi.cmpn;version=6.0,\
	org.eclipselabs.jaxrs.jersey.api;version=latest,\
	org.eclipselabs.jaxrs.jersey.impl;version=latest,\
	org.osgi.service.jaxrs;version=1.0,\
	javax.ws.rs-api;version=2.0,\
	org.glassfish.jersey.core.jersey-client
	

javac.source: 1.8
javac.target: 1.8

# We need JUnit and Mockito to resolve the test cases at runtime. 
# Other runtime dependencies should be added as necessary
-runbundles: \
	${junit},\
	${mockito},\
	javax.annotation-api;version='[1.3.0,1.3.1)',\
	javax.validation.api;version='[1.1.0,1.1.1)',\
	org.osgi.service.jaxrs;version='[0.0.0,0.0.1)',\
	org.apache.felix.configadmin;version='[1.8.10,1.8.11)',\
	org.apache.felix.eventadmin;version='[1.4.8,1.4.9)',\
	org.apache.felix.gogo.command;version='[0.16.0,0.16.1)',\
	org.apache.felix.gogo.runtime;version='[0.16.2,0.16.3)',\
	org.apache.felix.gogo.shell;version='[0.12.0,0.12.1)',\
	org.apache.felix.http.servlet-api;version='[1.1.2,1.1.3)',\
	org.apache.felix.scr;version='[2.0.6,2.0.7)',\
	org.apache.felix.http.jetty;version='[3.1.6,3.1.7)',\
	org.apache.servicemix.bundles.junit;version='[4.12.0,4.12.1)',\
	javax.ws.rs-api,\
	javassist;version='[3.22.0,3.22.1)',\
	javax.annotation-api;version='[1.3.0,1.3.1)',\
	org.glassfish.hk2.external.javax.inject,\
	org.glassfish.hk2.api,\
	org.glassfish.hk2.external.aopalliance-repackaged,\
	org.glassfish.hk2.utils,\
	org.glassfish.hk2.osgi-resource-locator,\
	org.glassfish.hk2.locator,\
	org.glassfish.jersey.bundles.jaxrs-ri;version='[2.26.0,2.26.1)',\
	org.glassfish.jersey.bundles.repackaged.jersey-guava,\
	org.eclipse.jetty.client;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.http;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.io;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.security;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.server;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.servlet;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.util;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.webapp;version='[9.4.6,9.4.7)',\
	org.eclipse.jetty.xml;version='[9.4.6,9.4.7)',\
	jersey.standalone.osgi;version=snapshot,\
	org.mockito.mockito-core;version='[1.10.19,1.10.20)',\
	org.objenesis;version='[2.2.0,2.2.1)',\
#	org.eclipselabs.jetty.servlet.contract;version='[9.4.6,9.4.7)',\
#	org.eclipselabs.osgi.jetty;version='[1.0.0,1.0.1)',\
	org.eclipselabs.jaxrs.jersey.impl;version=snapshot,\
	org.eclipselabs.jaxrs.jersey.api;version=snapshot,\
	org.eclipselabs.jaxrs.jersey.tests;version=snapshot
	
-runrequires: \
	osgi.identity;filter:='(osgi.identity=org.apache.felix.gogo.shell)',\
	osgi.identity;filter:='(osgi.identity=org.apache.felix.gogo.command)',\
	osgi.identity;filter:='(&(osgi.identity=org.apache.felix.eventadmin)(version>=1.4.8))',\
	osgi.identity;filter:='(osgi.identity=org.apache.felix.configadmin)',\
	osgi.identity;filter:='(osgi.identity=org.eclipselabs.jaxrs.jersey.tests)',\
	osgi.identity;filter:='(&(osgi.identity=org.glassfish.jersey.bundles.repackaged.jersey-guava)(version>=2.26.0))',\
	osgi.identity;filter:='(&(osgi.identity=org.eclipselabs.osgi.hk2.repackaged)(version>=2.5.0))',\
	osgi.identity;filter:='(&(osgi.identity=javax.validation.api)(version>=1.1.0.Final))'

Bundle-Version: 1.0.0.${tstamp}
Bundle-Copyright: Data In Motion Consulting
Bundle-License: Eclipse Public License v1.0
Bundle-Name: Jersey JaxRS Whiteboard integration test
Bundle-Description: Jersey OSGi JaxRs Whiteboard integration tests
Bundle-Vendor: Data In Motion Consulting GmbH
Private-Package: \
	org.eclipselabs.jaxrs.jersey.tests,\
	org.eclipselabs.jaxrs.jersey.tests.resources,\
	org.eclipselabs.jaxrs.jersey.tests.customizer,\
	org.eclipselabs.jaxrs.jersey.tests.applications
Require-Capability: osgi.implementation;filter:='(&(osgi.implementation=osgi.jaxrs)(provider=jersey))'

# Needed for Mockito's mocking to work
-runsystempackages.objenesis: sun.misc,sun.reflect

# Use Felix by default
-runfw: org.apache.felix.framework;version=5
-runvm: -ea
-runee: JavaSE-1.8