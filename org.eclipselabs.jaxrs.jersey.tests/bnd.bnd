# This is the version of JUnit that will be used at build time and run time
junit: org.apache.servicemix.bundles.junit;version="[4.11,5)"

# This is the version of Mockito that will be used at build time and run time
mockito: org.mockito.mockito-core;version="[1.9,2)",\
  org.objenesis;version="[2.1,3)"

# Discover and run all test cases annotated with the @RunWith annotation
Test-Cases: ${classes;CONCRETE;ANNOTATED;org.junit.runner.RunWith}

# Build dependencies 
-buildpath: \
	${junit},\
	${mockito},\
	osgi.annotation;version=6.0.1,\
	osgi.core;version=6.0,\
	osgi.cmpn;version=6.0,\
	org.eclipselabs.jaxrs.jersey.api;version=latest,\
	org.eclipselabs.jaxrs.jersey.impl;version=latest,\
	org.osgi.service.jaxrs;version=1.0,\
	org.glassfish.jersey.core.jersey-client;version=2.26,\
	javax.ws.rs-api;version=2.0

javac.source: 1.8
javac.target: 1.8

# We need JUnit and Mockito to resolve the test cases at runtime. 
# Other runtime dependencies should be added as necessary
-runbundles: \
	${junit},\
	${mockito},\
	javassist;version=3.22.0,\
	javax.annotation-api;version=1.3.0,\
	javax.validation.api;version=1.1.0,\
	javax.servlet-api;version=3.1.0,\
	org.osgi.service.jaxrs;version=1.0.0,\
	org.apache.felix.gogo.command;version=0.16.0,\
	org.apache.felix.gogo.shell;version=0.12.0,\
	org.apache.felix.gogo.runtime;version=0.16.2,\
	org.apache.felix.log;version=1.0.1,\
	org.apache.felix.scr;version=2.0.6,\
	org.apache.felix.configadmin;version=1.8.10,\
	org.eclipse.jetty.continuation;version=9.4.6,\
	org.eclipse.jetty.http;version=9.4.6,\
	org.eclipse.jetty.io;version=9.4.6,\
	org.eclipse.jetty.security;version=9.4.6,\
	org.eclipse.jetty.server;version=9.4.6,\
	org.eclipse.jetty.servlet;version=9.4.6,\
	org.eclipse.jetty.util;version=9.4.6,\
	org.eclipse.jetty.webapp;version=9.4.6,\
	org.eclipse.jetty.xml;version=9.4.6,\
	org.glassfish.hk2.api;version=2.5.0,\
	org.glassfish.hk2.external.aopalliance-repackaged;version=2.5.0,\
	org.glassfish.hk2.external.javax.inject;version=2.5.0,\
	org.glassfish.hk2.locator;version=2.5.0,\
	org.glassfish.hk2.locator-extras;version=2.5.0,\
	org.glassfish.hk2.osgi-resource-locator;version=2.5.0,\
	org.glassfish.hk2.utils;version=2.5.0,\
	org.glassfish.jersey.bundles.jaxrs-ri;version=2.26.0,\
	org.glassfish.jersey.bundles.repackaged.jersey-guava;version=2.26.0,\
	org.glassfish.jersey.containers.jersey-container-jetty-http;version=2.26.0,\
	org.glassfish.jersey.containers.jersey-container-jetty-servlet;version=2.26.0,\
	org.glassfish.jersey.containers.jersey-container-servlet;version=2.26.0,\
	org.glassfish.jersey.containers.jersey-container-servlet-core;version=2.26.0,\
	org.glassfish.jersey.media.jersey-media-jaxb;version=2.26.0,\
	org.eclipselabs.jaxrs.jersey.api;version=latest,\
	org.eclipselabs.jaxrs.jersey.impl;version=latest

Bundle-Version: 1.0.0.${tstamp}
Bundle-Copyright: Data In Motion Consulting
Bundle-License: Eclipse Public License v1.0
Bundle-Name: Jersey JaxRS Whiteboard integration test
Bundle-Description: Jersey OSGi JaxRs Whiteboard integration tests
Bundle-Vendor: Data In Motion Consulting GmbH
Private-Package: \
	org.eclipselabs.jaxrs.jersey.tests,\
	org.eclipselabs.jaxrs.jersey.tests.resources,\
	org.eclipselabs.jaxrs.jersey.tests.customizer,\
	org.eclipselabs.jaxrs.jersey.tests.applications

# Needed for Mockito's mocking to work
-runsystempackages.objenesis: sun.misc,sun.reflect

# Use Felix by default
-runfw: org.apache.felix.framework;version=5
-runvm: -ea