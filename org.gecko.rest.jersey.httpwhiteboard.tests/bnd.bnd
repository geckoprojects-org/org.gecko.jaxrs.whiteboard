# This is the version of JUnit that will be used at build time and run time
junit: org.apache.servicemix.bundles.junit;version="[4.11,5)"

# This is the version of Mockito that will be used at build time and run time
mockito: org.mockito.mockito-core;version="[1.9,2)",\
  org.objenesis;version="[2.1,3)"

# Discover and run all test cases annotated with the @RunWith annotation
#Test-Cases: ${classes;CONCRETE;ANNOTATED;org.junit.runner.RunWith}

# Build dependencies 
-buildpath: \
	${junit},\
	${mockito},\
	osgi.annotation;version=7.0.0,\
	osgi.core;version=6.0,\
	osgi.cmpn;version=6.0,\
	org.gecko.rest.jersey.api;version=latest,\
	org.gecko.rest.jersey.impl;version=latest,\
	org.apache.felix.http.jetty;version=3.4.7,\
	org.glassfish.jersey.bundles.jaxrs-ri,\
	javax.annotation-api;version=1.3,\
	org.gecko.rest.jersey.tests;version=latest

-runrequires: \
	osgi.identity;filter:='(&(osgi.identity=org.apache.felix.eventadmin)(version>=1.4.8))',\
	osgi.identity;filter:='(osgi.identity=org.apache.felix.configadmin)',\
	osgi.identity;filter:='(osgi.identity=org.gecko.rest.jersey.httpwhiteboard.tests)',\
	bnd.identity;id='org.apache.felix.gogo.command',\
	bnd.identity;id='org.apache.felix.gogo.shell'

javac.source: 1.8
javac.target: 1.8

# We need JUnit and Mockito to resolve the test cases at runtime. 
# Other runtime dependencies should be added as necessary
-runbundles: \
	javax.validation.api;version='[1.1.0,1.1.1)',\
	org.apache.felix.http.servlet-api;version='[1.1.2,1.1.3)',\
	org.apache.servicemix.bundles.junit;version='[4.12.0,4.12.1)',\
	org.gecko.rest.jersey.api;version=snapshot,\
	org.gecko.rest.jersey.httpwhiteboard.tests;version=snapshot,\
	org.gecko.rest.jersey.impl;version=snapshot,\
	org.eclipselabs.osgi.hk2.repackaged;version='[2.5.0,2.5.1)',\
	org.glassfish.jersey.bundles.jaxrs-ri;version='[2.26.0,2.26.1)',\
	javax.annotation-api;version='[1.3.1,1.3.2)',\
	org.osgi.util.function;version='[1.1.0,1.1.1)',\
	org.osgi.util.promise;version='[1.1.0,1.1.1)',\
	org.osgi.util.pushstream;version='[1.0.0,1.0.1)',\
	javax.inject;version='[1.0.0,1.0.1)',\
	javax.ws.rs-api;version='[2.1.0,2.1.1)',\
	org.apache.felix.configadmin;version='[1.9.0,1.9.1)',\
	org.apache.felix.eventadmin;version='[1.4.10,1.4.11)',\
	org.apache.felix.scr;version='[2.1.0,2.1.1)',\
	org.eclipselabs.jaxrs.jersey.contract;version='[2.26.0,2.26.1)',\
	org.glassfish.javax.activation;version='[3.0.0,3.0.1)',\
	org.glassfish.jersey.bundles.repackaged.jersey-guava;version='[2.26.0,2.26.1)',\
	org.glassfish.jersey.core.jersey-client;version='[2.26.0,2.26.1)',\
	org.apache.felix.gogo.command;version='[1.0.2,1.0.3)',\
	org.apache.felix.gogo.runtime;version='[1.0.10,1.0.11)',\
	org.apache.felix.gogo.shell;version='[1.0.0,1.0.1)',\
	org.apache.felix.http.jetty;version='[3.4.8,3.4.9)',\
	org.osgi.service.jaxrs;version='[1.0.0,1.0.1)'

Bundle-Version: 1.0.0.${tstamp}
Bundle-Copyright: Data In Motion Consulting
Bundle-License: Eclipse Public License v1.0
Bundle-Name: Jersey JaxRS Whiteboard HTTP Whiteboard based integration test
Bundle-Description: Jersey OSGi JaxRs Whiteboard HTTP Whiteboard based  integration tests
Bundle-Vendor: Data In Motion Consulting GmbH
Private-Package: \
	org.gecko.rest.jersey.httpwhiteboard.tests,\
	org.gecko.rest.jersey.httpwhiteboard.tests.applications,\
	org.gecko.rest.jersey.httpwhiteboard.tests.customizer,\
	org.gecko.rest.jersey.httpwhiteboard.tests.resources,\
	org.gecko.rest.jersey.tests.customizer
Require-Capability: \
	osgi.implementation;filter:='(&(osgi.implementation=osgi.jaxrs)(provider=jersey)(http.whiteboard=true))'

# Needed for Mockito's mocking to work
-runsystempackages.objenesis: sun.misc,sun.reflect

# Use Felix by default
-runfw: org.apache.felix.framework;version='[5.7.0.SNAPSHOT,5.7.0.SNAPSHOT]'
-runvm: -ea
-runee: JavaSE-1.8
-runproperties: \
	org.osgi.service.http.port=0,\
	felix.log.level=4
